# Karunia Motor Backend - Production Environment Variables
# Copy this file to .env for production deployment
# IMPORTANT: Generate unique values for all security keys!

# ===================================
# Server Configuration
# ===================================
HOST=0.0.0.0
PORT=1337
NODE_ENV=production

# Public URL (update with your actual domain)
PUBLIC_URL=https://api.karuniamotor.com

# ===================================
# Security Keys
# ===================================
# CRITICAL: Generate unique random values for production!
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"

# APP_KEYS: Comma-separated list of 4 random strings
APP_KEYS="GENERATE_KEY_1,GENERATE_KEY_2,GENERATE_KEY_3,GENERATE_KEY_4"

# API Token Salt
API_TOKEN_SALT=GENERATE_UNIQUE_SALT

# Admin JWT Secret
ADMIN_JWT_SECRET=GENERATE_UNIQUE_SECRET

# Transfer Token Salt
TRANSFER_TOKEN_SALT=GENERATE_UNIQUE_SALT

# JWT Secret for user tokens
JWT_SECRET=GENERATE_UNIQUE_SECRET

# Encryption Key
ENCRYPTION_KEY=GENERATE_UNIQUE_KEY

# ===================================
# Database Configuration (PostgreSQL)
# ===================================
DATABASE_CLIENT=postgres

# Internal hostname (use service name from docker-compose)
DATABASE_HOST=postgres

# PostgreSQL port (internal)
DATABASE_PORT=5432

# Database credentials
DATABASE_NAME=karunia_motor
DATABASE_USERNAME=strapi_user
DATABASE_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# SSL Configuration (set to true if using SSL)
DATABASE_SSL=false

# Database Schema
DATABASE_SCHEMA=public

# Connection Pool Settings (optional)
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ===================================
# CORS Configuration (Optional)
# ===================================
# Add your frontend domains here
# FRONTEND_URL=https://karuniamotor.com
# CLIENT_URL=https://karuniamotor.com

# ===================================
# Email Configuration (Optional)
# ===================================
# EMAIL_PROVIDER=sendgrid
# EMAIL_PROVIDER_API_KEY=your-sendgrid-api-key
# EMAIL_DEFAULT_FROM=noreply@karuniamotor.com
# EMAIL_DEFAULT_REPLY_TO=support@karuniamotor.com

# ===================================
# File Upload Configuration (Optional)
# ===================================
# For AWS S3
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_ACCESS_SECRET=your-secret-key
# AWS_REGION=ap-southeast-1
# AWS_BUCKET=karunia-motor-uploads

# For Cloudinary
# CLOUDINARY_NAME=your-cloud-name
# CLOUDINARY_KEY=your-api-key
# CLOUDINARY_SECRET=your-api-secret

# ===================================
# Monitoring & Logging (Optional)
# ===================================
# For Sentry error tracking
# SENTRY_DSN=your-sentry-dsn

# ===================================
# Rate Limiting (Optional)
# ===================================
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_MAX_REQUESTS=100
# RATE_LIMIT_WINDOW_MS=60000
